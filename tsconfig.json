{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2019",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist"
    },
    "lib": [
        "ES2020"
    ],
    "include": [
        "./",
        "./**/*.ts",
        "./**/*.js",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules/",
        "dist/",
    ]
}
